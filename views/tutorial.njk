{% extends "layout.njk" %}

{% block head %}

  <title>Tutorial - Git</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
 
{% endblock %}

{% block content %}

  <div class="links" id="wrapper">
    <h1>Curso Git / Github</h1>
    <a id="links-out" href="https://www.youtube.com/channel/UCySbdH4Tt_l5W4gQJrNqm-Q" target="_blank">Professor Jos√© de Assis</a>
  </div>

  <section class="cards">

    {% for item in items %}
      <div class="card" id="{{item.id}}">
      
        <div class="card_image-container {{ 'featured-wrapper' if 'item-featured' }} ">
          <img src="https://img.youtube.com/vi/{{item.id}}/mqdefault.jpg" alt="Imagem de {{item.title}}">
          {% if item.featured %}
            <div class="featured">Featured</div>
          {% endif %}
        </div>

        <div class="card_content">
          <p>"{{item.title}}"</p>
        </div>

        <div class="card_info">
          <p>{{item.duration}}</p>
        </div>

      </div>
    {% endfor %}
  
  </section>

  <script src="/scripts.js"></script>

{% endblock %}